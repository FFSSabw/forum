<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ffssabcloud.forum.domain.DB2.PostRepository">
    <resultMap id="postMap" type="com.ffssabcloud.forum.domain.Post">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
    </resultMap>
    <select id="findByName" parameterType="String" resultMap="postMap">
        select id, name
        from post
        where name=#{name}
    </select>
    <insert
        id="addAPost"
        parameterType="String"
        flushCache="true">
        insert into post(name)
        values(#{name})
    </insert>
</mapper>